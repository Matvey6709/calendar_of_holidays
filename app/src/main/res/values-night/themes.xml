<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calendar_of_holidays" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="CollapsedAppBar" parent="android:TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CollapsedAppBar2" parent="android:TextAppearance">
        <item name="android:textSize">80sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Theme.MyApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Screen">
        <item name="android:background">@color/white</item>
    </style>
    <style name="text">
        <item name="android:textColor">#273B4A</item>
    </style>
    <style name="text_main_sc">
        <item name="android:textColor">#273B4A</item>
    </style>
    <style name="main_bac">
        <item name="android:background">#D7DCEA</item>
    </style>
    <style name="nav" parent="Animation.Design.BottomSheetDialog">
        <item name="android:background">#D7DCEA</item>
        <item name="itemIconTint" tools:targetApi="o">#273B4A</item>
        <item name="itemTextColor" tools:targetApi="o">#273B4A</item>
    </style>
    <style name="screen">
        <item name="android:background">@color/white</item>
    </style>
    <style name="list" parent="Widget.AppCompat.ListView">
        <item name="android:background">@drawable/corners2_ligth</item>
    </style>
    <style name="bac_sc" parent="Div.Image">
        <item name="srcCompat">@drawable/backround_ligth</item>
    </style>
    <style name="bac_points" parent="Div.Image">
        <item name="srcCompat">@drawable/clouds</item>
    </style>

    <style name="bac_main_land" parent="Div.Image">
        <item name="srcCompat">@drawable/sky_land_ligth</item>
    </style>
    <style name="bac_moon" parent="Div.Image">
        <item name="srcCompat">@drawable/sky_moon_ligth</item>
    </style>
    <style name="bac_solap" >
        <item name="android:background">@drawable/corners3_ligth</item>
    </style>
    <style name="img_but_cal" parent="Widget.AppCompat.ImageButton">
        <item name="tint">#273B4A</item>
    </style>
    <style name="but">
        <item name="android:background">@drawable/corners2_ligth</item>
        <item name="android:textColor">#273B4A</item>
    </style>
    <style name="but_back">
        <item name="android:tint">#273B4A</item>
    </style>

    <style name="PreferenceScreen" parent="@style/Theme.MaterialComponents.NoActionBar">
        <item name="colorAccent">@color/light_blue_200</item>
        <item name="android:textColor">@color/black</item>
    </style>


</resources>